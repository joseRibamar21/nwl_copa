generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator erd {
  provider = "prisma-erd-generator"
}

model Room {
  id           String        @id @default(cuid())
  title        String
  urlImage     String?
  code         String        @unique
  createdAt    DateTime      @default(now())
  open         Boolean       @default(false)
  restrict     Boolean       @default(false)
  description  String?
  ownerId      String?
  owner        User?         @relation(fields: [ownerId], references: [id])
  participants Participant[]
  Game         Game[]
  ranking      Ranking[]

  @@index([ownerId])
}

model Participant {
  id      String    @id @default(cuid())
  userId  String
  roomId  String
  user    User      @relation(fields: [userId], references: [id])
  room    Room      @relation(fields: [roomId], references: [id])
  guesses Guess[]
  ranking Ranking[]

  @@unique([userId, roomId])
  @@index([roomId])
}

model User {
  id               String        @id @default(cuid())
  name             String
  email            String        @unique
  googleId         String?       @unique
  avatarUrl        String?
  password         String?
  createdAt        DateTime      @default(now())
  ownRooms         Room[]
  participantingAt Participant[]
}

model Game {
  id               String   @id @default(cuid())
  date             DateTime
  firstTeam        String
  secondTeam       String
  firstTeamPoints  Int?
  secondTeamPoints Int?
  roomId           String
  guesses          Guess[]
  room             Room     @relation(fields: [roomId], references: [id])

  @@index([roomId])
}

model Ranking {
  id            String      @id @default(cuid())
  participantId String
  gameId        String
  roomId        String
  participant   Participant @relation(fields: [participantId], references: [id])
  room          Room        @relation(fields: [roomId], references: [id])
  points        Int?

  @@index([participantId])
  @@index([roomId])
}

model Guess {
  id               String      @id @default(cuid())
  firstTeamPoints  Int
  secondTeamPoints Int
  points           Int?
  createdAt        DateTime    @default(now())
  gameId           String
  participantId    String
  game             Game        @relation(fields: [gameId], references: [id])
  participant      Participant @relation(fields: [participantId], references: [id])

  @@unique([participantId, gameId])
  @@index([gameId])
}
